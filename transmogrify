#!/usr/bin/env node

var file,
  fs = require('fs'),
  PNG = require('png-js'),
  kdi = ''.match(/.{1,2}/g).map(function(n) { return parseInt(n,16) }),
  colors = ''.match(/.{1,6}/g).map(function(n) { return parseInt(n,16) });

function h2r(hex) {
  var r = hex >> 16,
    g = hex >> 8 & 0xFF,
    b = hex & 0xFF;
  return [r, g, b];
}

function d(x, y) {
  x = x.slice ? x : h2r(x);
  y = y.slice ? y : h2r(y);
  return Math.abs(x[0] - y[0]) + Math.abs(x[1] - y[1]) + Math.abs(x[2] - y[2]);
}

function nn(node, value, depth, closest) {
  if(closest == null) closest = {idx:0, dist:0xFFFFFF};
  var color = h2r(colors[kdi[node]]);
  var ri = node * 2 + 2;
  if(ri < kdi.length) {
    var axis = depth % 3;
    var branches = value[axis] < color[axis] ? [ri - 1, ri] : [ri, ri - 1];
    nn(branches[0], value, depth + 1, closest);
    if(Math.abs(value[axis] - color[axis]) < closest.dist) nn(branches[1], value, depth + 1, closest);
  } else {
    var dist = d(color, value);
    if(dist < closest.dist) {
      closest.dist = dist;
      closest.idx = node;
    }
  }
  return kdi[closest.idx];
}

if (process.argv.length < 3) {
  throw 'Whoops: please specify an image';
}

file = process.argv[2];

fs.readFile(file, function (err, file) {
  var png;
  if (err) {
    throw 'Whoops: ' + err;
  }
  png = new PNG(file);
  
  png.decode(function (pixels) {
    var i, row = [], l = '\x1B[48;5;', r = 'm  \x1B[49m';
    for (i = 0; i < pixels.length; i += 4) {
      if (row.length === png.width) {
        console.log(row.join(''));
        row = [];
      }
      if (!pixels[i + 3]) {
        row.push('  ');
      } else {
        row.push(l + nn(0, [pixels[i], pixels[i + 1], pixels[i + 2]], 0, null) + r);
      }
    }
    console.log(row.join(''));
  });
});